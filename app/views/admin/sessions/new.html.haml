= form_with url: admin_sessions_path, local: true, class: "m-5" do |f|
  - if flash[:error].present?
    .alert.alert-danger
      = flash[:error]
  .form-group
    = f.label :email
    = f.text_field :email, class: "form-control"
  .form-group
    = f.label :password
    = f.password_field :password, class: "form-control"
  = f.submit "Login", class: "btn btn-primary"
