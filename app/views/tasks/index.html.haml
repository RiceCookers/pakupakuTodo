- if @tasks.any?
  .m-5
    .card
      .card-body
        %p
          Now Todo
          .font-weight-bold= @tasks.first.name
      %ul.list-group.list-group-flus
        %li.list-group-item TODO Count: #{@tasks.count}
- else
  .text-center.m-5
    %p Let's Manage TODO
    = link_to "Add TODO", new_task_path, class: "btn btn-primary"